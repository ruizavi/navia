{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext", "DOM", "ScriptHost"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "types": ["bun-types"],
    "declaration": true,
    "outDir": "./dist/cjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
