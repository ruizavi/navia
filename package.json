{
  "name": "parrot",
  "description": "Backend Framework based on Express",
  "version": "1.0.0",
  "author": {
    "name": "Victor Ruiz (ruizavi)",
    "url": "https://github.com/ruizavi",
    "email": "avi.ruiz@proton.me"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "bun": "./dist/bun/index.js",
      "node": "./dist/cjs/index.js",
      "require": "./dist/cjs/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruizavi/parrot.git"
  },
  "bugs": "https://github.com/ruizavi/parrot/issues",
  "homepage": "https://github.com/ruizavi/parrot",
  "keywords": [
    "bun",
    "http",
    "web",
    "server",
    "backend",
    "decorators",
    "typescrip"
  ],
  "license": "MIT",
  "scripts": {
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "swc src -d dist && tsc --project tsconfig.esm.json",
    "build:bun": "bun build.ts",
    "build": "bun build:esm && bun build:bun && bun build:cjs",
    "format": "bunx @biomejs/biome format src --write",
    "lint": "bunx @biomejs/biome lint src",
    "lint:format": "bunx @biomejs/biome check --apply src",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.101",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "bun-types": "latest",
    "husky": "^8.0.0",
    "lint-staged": "15.2.0",
    "multer": "^1.4.5-lts.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "express": "^4.18.2",
    "reflect-metadata": "^0.2.1",
    "ts-pattern": "^5.0.6"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "lint-staged": {
    "*.ts?(x)": [
      "bunx @biomejs/biome check --apply src"
    ]
  }
}
